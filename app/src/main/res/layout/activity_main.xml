<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    android:foregroundTint="@android:color/background_light"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        style="bold"
        android:layout_width="329dp"
        android:layout_height="74dp"
        android:layout_marginTop="16dp"
        android:text="HomeHelp Therapy"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textScaleX="1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_login_email"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:background="@drawable/boxemail"
        android:ems="10"
        android:hint="Digite seu e-mail..."
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#121212"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208"></EditText>

    <EditText
        android:id="@+id/text_login_senha"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:background="@drawable/boxemail"
        android:ems="10"
        android:hint="Digite sua senha..."
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#121212"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/button"
        android:layout_width="245dp"
        android:layout_height="68dp"
        android:background="@drawable/boxentrar"
        android:onClick="btnLogin"
        android:text="Entrar"
        android:textColor="#E6E6E6"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.577" />

    <Button
        android:id="@+id/button2"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@drawable/boxcadastro"
        android:onClick="btnCadastro"
        android:text="Cadastre-se"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="388dp"
        android:layout_height="97dp"
        android:layout_marginTop="640dp"
        android:src="@drawable/saojoselogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>